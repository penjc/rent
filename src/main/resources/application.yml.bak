server:
  port: 8080
  servlet:
    context-path: /api

spring:
  application:
    name: causal-rent
  
  # 数据源配置
  datasource:
    driver-class-name: com.mysql.cj.jdbc.Driver
    url: jdbc:mysql://localhost:3306/rent_dev?useUnicode=true&characterEncoding=utf8&serverTimezone=Asia/Shanghai&useSSL=false&allowPublicKeyRetrieval=true
    username: root
    password: root
  
  # 文件上传配置
  servlet:
    multipart:
      enabled: true
      max-file-size: 10MB
      max-request-size: 50MB
      file-size-threshold: 2KB

# JSON配置
jackson:
  date-format: yyyy-MM-dd HH:mm:ss
  time-zone: GMT+8

# MyBatis Plus配置
mybatis-plus:
  configuration:
    map-underscore-to-camel-case: true
  global-config:
    db-config:
      id-type: auto
  mapper-locations: classpath*:/mapper/*.xml

# 日志配置
logging:
  level:
    com.casual.rent: debug
    org.springframework.security: debug
  pattern:
    console: '%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{50} - %msg%n'

# 自定义配置
app:
  jwt:
    secret: causal-rent-2024-secret-key
    expiration: 86400000  # 24小时
  sms:
    code-length: 6
    expiration: 300  # 5分钟
  # 腾讯云OSS配置
  tencent:
    cos:
      secret-id: ${TENCENT_SECRET_ID:your-secret-id}
      secret-key: ${TENCENT_SECRET_KEY:your-secret-key}
      region: ${TENCENT_COS_REGION:ap-beijing}
      bucket-name: ${TENCENT_COS_BUCKET:casual-rent}
      domain: ${TENCENT_COS_DOMAIN:https://casual-rent.cos.ap-beijing.myqcloud.com} 